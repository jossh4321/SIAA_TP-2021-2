@{ Layout = null; }

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="assetsLog/css/estilos.css">
    <link href="~/css/Carga/estilo.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css? family=Kaushan+Script|Poppins&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/cferdinandi/smooth-scroll/dist/smooth-scroll.polyfills.min.js"></script>
    <link rel="icon" href="~/assets/img/SIGECA_ADMIN-LogoIcon.svg" />

</head>


<body>

    
        
    

    <main>
        <div id="preloader"></div>
        <div id="main-login">
            <div class="contenedor__todo">
                <div class="caja__trasera">
                    <div class="caja__trasera-login">
                        <h3>¿Ya tienes una cuenta?</h3>
                        <p>Inicia sesión para entrar en la página</p>
                        <button id="btn__iniciar-sesion">Iniciar Sesión</button>
                    </div>
                    <div class="caja__trasera-register">
                        <h3>¿Olvido su contraseña?</h3>
                        <p>Recordar Contraseña</p>
                        <button id="btn__registrarse" type="button">Recuperar</button>
                    </div>
                </div>
                <!--Formulario de Login y registro-->
                <div class="contenedor__login-register">
                    <!--Login-->
                    <form action="" class="formulario__login">
                        <h2>Iniciar Sesión</h2>
                        <input type="text" id="usuario" placeholder="Correo Electronico">
                        <input type="password" id="clave" placeholder="Contraseña">
                        <!--<button>Entrar</button>-->
                        <!--<a href="../Views/Login/Index.cshtml"><button>Entrar</button></a>-->
                        <button id="boton" type="button">Entrar</button>
                    </form>

                    <!--Register-->
                    <form action="" class="formulario__register">
                        <h2>Recuperar Contraseña</h2>
                        <input type="text" placeholder="Correo Electronico">
                        <input type="text" placeholder="Confirmar Correo">

                        <button>Enviar</button>
                        <br />
                        <p style="color:dimgrey">Se enviaran los datos al correo ingresado</p>
                    </form>
                </div>
            </div>
            <input type="hidden" id="URL_Login" value="@Url.Action("LogearUsuario", "Login")" />
            <input type="hidden" id="URL_Redirect" value="@Url.Action("Index", "Home")" />
         </div>
    </main>
    <script src="~/assetsLog/js/script.js"></script>
    <script src="~/js/Login/LoginScript.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="~/assetsLog/js/script.js"></script>
    
        <script>


            $(window).on('load', function () {
                setTimeout(function () {
                    $('#preloader').hide();
                }, 2500);
            })

    </script>
</body>
</html>


