</button>
<div class="card mb-4">
    <div class="card-header">
        <div class="row">
            <div class=" col-10 col-sm-10 col-lg-10 col-xl-10">
                <i class="fas fa-table mr-1"></i>
                Usuarios Registrados actualmente
            </div>
            <div class="col-2 col-sm-2 col-lg-2 col-xl-2">
                <button type="button" class="btn btn-outline-success btn-block"
                        data-bs-toggle="modal" data-bs-target="#registrarUsuario">
                    <i class="fas fa-user-check"></i>
                    <span>Registrar Usuario</span>
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="TableUsuario" class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.nombre)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.tipoVenta)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.stock)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.precio) (x Kg)</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => product.nombre)</td>
                            <td>@Html.DisplayFor(modelItem => product.tipoVenta)</td>
                            <td>@Html.DisplayFor(modelItem => product.stock)</td>
                            <td>S/. @Html.DisplayFor(modelItem => product.precio)</td>
                            <td>
                                <button class="btn"><img class="fas fa-eye" /></button>
                                <button class="btn"><img class="fas fa-edit" /></button>
                                <button class="btn"><img class="fas fa-ban" /></button>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
