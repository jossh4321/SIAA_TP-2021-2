<div class="modal" id="modalRegistrarUsuario" tabindex="-1" aria-labelledby="registrarUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registrarUsuarioLabel">Registrar Nuevo Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row g-3">
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="nombre" class="form-label">Nombres:</label>
                            <input class="form-control" id="nombreUsuarioRegistrar" placeholder="Jose Alberto">
                        </div>
                        <div class="mb-3 col-6">
                            <label for="apellido" class="form-label">Apellidos:</label>
                            <input class="form-control" id="apellidoUsuarioRegistrar" placeholder="Ramirez Perez">
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="email" class="form-label">E-Mail: </label>
                            <input type="email" class="form-control" id="emailUsuarioRegistrar" placeholder="ejemplo@dominio.com">
                        </div>
                        <div class="mb-3 col-6">
                            <label for="celular" class="form-label">Nro Celular:</label>
                            <input class="form-control" id="celularUsuarioRegistrar" placeholder="998877665">
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-12">
                            <label for="direccion" class="form-label">Direccion</label>
                            <textarea class="form-control" id="direccionUsuarioRegistrar" rows="3" placeholder="Av. cerca 123 - Distrito"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="tipoDocumento" class="form-label">Tipo Documento: </label>
                            <select class="form-select" id="tipoDocumentoUsuarioRegistrar" aria-label="Default select example">
                                <option selected value="DNI">D.N.I.</option>
                                <option value="CI">Carnet De Extranjeria</option>
                                <option value="Pasaporte">Pasaporte</option>
                            </select>
                        </div>
                        <div class="mb-3 col-6">
                            <label for="celular" class="form-label">Numero Documento:</label>
                            <input class="form-control" id="celularUsuarioRegistrar" placeholder="12345678">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Registrar Usuario</button>
            </div>
        </div>
    </div>
</div>

