@model SIGECA.Controllers.HomeController.ModelHome
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="mt-4" style="color: white">SIAC</h1>
<div class="row">

    <div class="col-sm-4">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active" style="color:midnightblue">Bienvenido "Usuario" </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">Productos</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Action("Index", "Producto")">Ir</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">Proveedores</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Action("Index", "Proveedor")">Ir</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">Tiendas</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="#">Ir</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">Delivery</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="#">Ir</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" style="color:midnightblue">Estadisticas diarias </li>
            </ol>

        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card mt-0">
            <div class="row">
                <div class="col-md-6">
                    <div class="peity_bar_bad left text-center mt-2">
                        <span>
                            <span style="display: none;">3,5,6,16,8,10,6</span>
                            <canvas width="0" height="0"></canvas>
                        </span>
                        <h6><i class="fas fa-chart-area mr-1"></i>+25%</h6>

                    </div>
                </div>
                <div class="col-md-6 border-left text-center pt-2">
                    <h3 class="mb-0 fw-bold">@Model.stockVendida.ToString()</h3>
                    <span class="text-muted">Cantidad de stock vendida</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mt-0">
            <div class="row">
                <div class="col-md-6">
                    <div class="peity_bar_bad left text-center mt-2">
                        <span>
                            <span style="display: none;">3,5,6,16,8,10,6</span>
                            <canvas width="0" height="0"></canvas>
                        </span>
                        <h6><i class="fas fa-chart-area mr-1"></i>+25%</h6>

                    </div>
                </div>
                <div class="col-md-6 border-left text-center pt-2">
                    <h3 class="mb-0 fw-bold">@Model.inventarios.Count()</h3>
                    <span class="text-muted">Cantidad de ordenes</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mt-0">
            <div class="row">
                <div class="col-md-6">
                    <div class="peity_bar_bad left text-center mt-2">
                        <span>
                            <span style="display: none;">3,5,6,16,8,10,6</span>
                            <canvas width="0" height="0"></canvas>
                        </span>
                        <h6><i class="fas fa-chart-area mr-1"></i>+25%</h6>
                    </div>
                </div>
                <div class="col-md-6 border-left text-center pt-2">
                    <h3 class="mb-0 fw-bold">@Model.mayorCantidad</h3>
                    <span class="text-muted">Producto mas vendido</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-xl-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-area mr-1"></i>
                Pedido de Lun - Dom
            </div>
            <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-bar mr-1"></i>
                Productos
            </div>
            <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
}


