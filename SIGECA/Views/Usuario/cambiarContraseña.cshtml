@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card bg-pattern">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-6 col-sm-6 col-lg-6 col-xl-6">
                                <div class="p-sm-3">
                                    <h4 class="mt-3 mt-lg-0">Cambiar Contraseña</h4>
                                    <form action="@Url.Action("CambiarContraseña","Usuario")" id="frmCambiarContraseña" method="post">
                                        <div class="form-group mb-3">
                                            <label for="fullname">Nueva contraseña:</label>
                                            <input class="form-control" type="password" id="usuarioContraseña" name="contraseña" placeholder="Ingresar contraseña">
                                        </div>
                                        <div class="form-group mb-3">
                                            <label for="emailaddress2">Repetir contraseña:</label>
                                            <input class="form-control" type="password" id="usuarioContraseñaRepetir" name="contraseña2" placeholder="Repetir contraseña">
                                        </div>
                                        <div class="form-group mb-0">
                                            <button class="btn btn-success btn-sm float-sm-right" id="btnCambiarContraseña">Guardar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/js/Usuarios/GestionarUsuario.js">
    </script>
}